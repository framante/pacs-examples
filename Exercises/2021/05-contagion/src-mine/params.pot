[domain]
  # Domain is [0, domain_size] x [0, domain_size] x [0, domain_size].
  domain_size = 2

  # Pub size and location.
  pub_size = 0.3

  pub_x = 1
  pub_y = 1
  pub_z = 1
  [../]

[contagion]
  # Number of people.
  n_people = 500

  # Number of timesteps per day.
  n_timesteps_per_day = 24

  # Simulation duration
  # (= #days * n_timesteps_per_day).
  n_timesteps = 2880

  # Number of people initially infected.
  n_init_infected = 1

  # Fraction of people who practice social distancing.
  frac_sd = 0.75

  # People get infected when another infected gets closer than r_infection.
  r_infection = 0.04

  [../]

[person]
  # People go to the pub once every n_timesteps_go_to_pub timesteps
  # (= #days * n_timesteps_per_day).
  n_timesteps_go_to_pub = 168

  # Number of timesteps spent at pub.
  n_timesteps_at_pub = 3

  # People recover after n_timesteps_recover timesteps
  # (= #days * n_timesteps_per_day).
  n_timesteps_recover = 240

  # People, if exposed, get infected after n_timesteps_incubation timesteps
  # (= #days * n_timesteps_per_day).
  n_timesteps_incubation = 168

  # Step length per timestep.
  dr = 0.05

  # Probability for one person to have a child.
  birth = 5e-6

  # Probability for one person to die of natural causes.
  death = 5e-7

  # Probability for one person to die due to the disease.
  disease_death = 1e-3
  
  [../]